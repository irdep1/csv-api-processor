{
  "requests": [
    {
      "name": "Create Order",
      "endpoint": "https://httpbin.org/post",
      "method": "POST",
      "payloadTemplate": {
        "customer": {
          "id": "$customerId",
          "name": "$customerName"
        },
        "items": [ { "productId": "$productId", "quantity": "$quantity" } ]
      },
      "extractFromResponse": {
        "field": "createdOrderId",
        "jsonPath": "id"
      }
    },
    {
      "name": "Add Shipping Info",
      "endpoint": "https://api.example.com/v1/orders/$createdOrderId/shipping",
      "method": "PUT",
      "payloadTemplate": {
        "address": "$address",
        "city": "$city",
        "zipCode": "$zipCode",
        "notes": "Order ID $createdOrderId processed."
      }
    },
    {
        "name": "Fetch Order Confirmation",
        "endpoint": "https://api.example.com/v1/orders/$createdOrderId/confirmation",
        "method": "GET",
        "payloadTemplate": {}
    }
  ]
}