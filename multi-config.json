{
  "requests": [
    {
      "name": "Create Order",
      "endpoint": "https://httpbin.org/post",
      "method": "POST",
      "payloadTemplate": {
        "customer": {
          "id": "$customerId",
          "name": "$customerName"
        },
        "items": [ { "productId": "$productId", "quantity": "$quantity" } ]
      },
      "extractFromResponse": {
        "field": "orderResponse",
        "jsonPath": "json"
      }
    },
    {
      "name": "Add Shipping",
      "endpoint": "https://httpbin.org/post",
      "method": "POST",
      "payloadTemplate": {
        "customerId": "$orderResponse.items"
      },      
      "extractFromResponse": {
        "field": "shippingResponse",
        "jsonPath": "json"
      }
    },
    {
      "name": "Finalize Order",
      "endpoint": "https://httpbin.org/post",
      "method": "POST",
      "payloadTemplate": {
        "orderData": "$orderResponse.customer.id",
        "shippingData": "$shippingResponse.customerId"
      }
    }
  ]
}